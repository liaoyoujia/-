/* components/music/index.wxss */
.music{
    display: flex;
    width: 750rpx;
    margin:60rpx 0 160rpx;
    position: relative;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}
.top-image{
    width:422rpx;
    height:422rpx;
    margin-top:60rpx;
    border-radius:50%;

}

.toggle{
    width:120rpx;
    height:120rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -60rpx;
    margin-top:-60rpx;
}
.music-top{
    position: relative;
}
.bottom{
    position: absolute;
    left:30rpx;
    bottom:-36rpx;
}
.top-image{
    display: block;
    margin: 0 auto;
}
.bottom-image{
    width:44rpx;
    height:128rpx;
     
}