/* components/searchDetail/index.wxss */
.search-detail{
    width: 750rpx;

}
.search{
    width: 100%;
    height:100rpx;
    box-sizing: border-box;
    padding:10rpx 20rpx;
    position: fixed;
    top:0;
    left: 0;


}
.book-name{
    width: 80%;
    height:68rpx;
    font-size:34rpx;
    padding-left:54rpx;
    background-color: #f5f5f5;
    border-radius: 18rpx;
}
.cancel{
    display: inline-block;
    position: absolute;
    top:22%;
    right:3%;
    z-index: 10;
    color:#00000a;
    font-size: 32rpx;

}
.search-icon{
    width:28rpx;
    height:28rpx;
    position: absolute;
    top:29%;
    left:5%;
    z-index: 10;
    
}
.calcel-icon{
    width:28rpx;
    height:28rpx;
    position: absolute;
    top:29%;
    right:18%;
    z-index: 10;
}
.history{
    margin: 120rpx auto 90rpx;
}
.block{
    display: inline-block;
    width: 10rpx;
    height:30rpx;
    background-color: #000; 
    margin-right:20rpx;
  
}
.top{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left:26rpx;
    font-size:32rpx;

}