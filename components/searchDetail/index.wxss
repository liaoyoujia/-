/* components/searchDetail/index.wxss */
.search-detail{
    width: 750rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;

}
.search{
    width: 100%;
    height:100rpx;
    box-sizing: border-box;
    padding:10rpx 20rpx;
    position: fixed;
    top:0;
    left: 0;
    background-color: #fff;


}
.book-name{
    width: 80%;
    height:68rpx;
    font-size:34rpx;
    padding-left:54rpx;
    background-color: #f5f5f5;
    border-radius: 18rpx;
}
.cancel{
    display: inline-block;
    position: absolute;
    top:22%;
    right:3%;
    z-index: 10;
    color:#00000a;
    font-size: 32rpx;

}
.search-icon{
    width:28rpx;
    height:28rpx;
    position: absolute;
    top:29%;
    left:5%;
    z-index: 10;
    
}
.calcel-icon{
    width:28rpx;
    height:28rpx;
    position: absolute;
    top:29%;
    right:18%;
    z-index: 10;
}
.history{
    width: 100%;
    margin: 120rpx auto 90rpx;
}
.block{
    display: inline-block;
    width: 10rpx;
    height:30rpx;
    background-color: #000; 
    margin-right:20rpx;
  
}
.top{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left:26rpx;
    font-size:32rpx;
    margin-bottom: 20rpx;

}
.bottom{

    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    padding:0 28rpx;
    flex-wrap: wrap;
    box-sizing: border-box;

}
.hot{
    width: 100%;
}
.item{
    font-size: 28rpx;
    width: 24%;
    text-align: center;
    background-color:#f5f5f5;
    color:#666;
    padding:12rpx 0;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.bottom-history{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding:0 28rpx;
    flex-wrap: wrap;
    box-sizing: border-box;

}
.item-history{
    font-size: 28rpx;
    width: 24%;
    text-align: center;
    background-color:#f5f5f5;
    color:#666;
    padding:12rpx 0;
    margin-right:20rpx;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.content{
    width: 100%;
    display: flex;
    border-top:1px solid #aaa;
    padding-top:30rpx;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-evenly;
    align-items: center;
}
.book-item{
    width:34%;
    height:360rpx;

    position: relative;
    z-index: -10;

    margin-bottom: 40rpx;
}

.book-decoration{
    width: 100%;
    height:100%;
}
.book-image{
    width: 100%;
    height:100%;
}

.face{
    position: absolute;
    bottom: 0;
    left: 0;
    box-sizing:border-box;
    padding-left:10rpx;
    padding-bottom: 6rpx;
    width: 100%;
    height:34%;
    background-color: #fff;
}
.name{
    display: block;
    font-size: 28rpx;
    margin-top:10rpx;
    text-overflow:ellipsis;
    white-space:nowrap;
    overflow:hidden;
    
}
.writer{
    display: block;
    font-size:20rpx;
    color:#999999;
    margin-bottom:10rpx;
    text-overflow:ellipsis;
    white-space:nowrap;
    overflow:hidden;
    
}
.like{
    font-size: 24rpx;
    display: block;
    color:#666666;
    text-align: right;

}