/* components/fashionComponent/index.wxss */
.box{
    display: flex;
    width: 100%;
    /* height: 100vh; */
    min-height: 100vh;
    position: relative;
    top: 0;
    left:0;
    right: 0;
    bottom: 0;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}
.top{
    display: flex;
    width: 100%;
    box-sizing: border-box;
    border-top:1rpx solid #eee;
    border-bottom: 1rpx solid #eee; 
    flex-direction: row;
    align-items: center;
    height:88rpx;  
    padding-left:12rpx;
    padding-bottom: 10rpx;
    justify-content: space-between;
}
.heart{
    position: relative;
    width: 68rpx;
}
.share{
    display: inline-block;
    width: 40rpx;
    height: 40rpx;

}
.assist{
    position: absolute;
    top:0;
    right: 0;
    font-size:24rpx;
    line-height:24rpx;
    color:#bbbbbb;

}
.date{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.month{
font-size:24rpx;
}
.year{
font-size: 20rpx;
}
.day{
    display: flex;
    flex-direction: row;
    align-items:baseline;

}
.no{
    font-size:32rpx;
}

.day-item{
    font-size:60rpx;
    font-weight: bold;

}
.left{
    display: flex;
    justify-content: flex-start;
}
.line{
    width:4rpx;
    height:46rpx;
    line-height: 88rpx;
    background-color: #000;
    margin:14rpx 12rpx 0;
}
.right{
    display: flex;
    flex-direction: row;
    padding-right:36rpx;


}
.forward{
    margin-left:20rpx;

}
.contain::after {
    border: none !important;
    padding: 0 !important;
}
.contain{
    padding: 0 !important;
    border:none !important;
    padding-top:18rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.forward button{
    width: 45rpx;
    height: 45rpx;
    background-color: #fff;
  
}
.heart-img{

    width: 26rpx;
    height:26rpx;
}
.bottom{
    width: 100%;
    margin-top:56rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.toggle{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    position: absolute;
    bottom: 54rpx;
    left:50%;
    margin-left:-42%;
    width: 85%;
    border-radius: 12rpx;
    align-items:center;
    background-color: #eee;
}
.content{
margin:0 auto;
    /* position: relative; */
    /* bottom: 0rpx; */
    /* left:50%; */
    max-width: 80%;
    font-size: 36rpx;
}
.left-image{
height: 80rpx;
width: 80rpx;
}
.title{
    line-height: 34rpx;
    text-align: center;
    font-size:28rpx;

}
.right-image{
    height: 80rpx;
    width: 80rpx;
}