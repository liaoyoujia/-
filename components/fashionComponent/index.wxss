/* components/fashionComponent/index.wxss */
.box{
    display: flex;
    width: 100%;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}
.top{
    display: flex;
    width: 100%;
    box-sizing: border-box;
    border-top:1rpx solid #eee;
    border-bottom: 1rpx solid #eee; 
    flex-direction: row;
    align-items: center;
    height:88rpx;  
    padding-left:12rpx;
    justify-content: space-between;
}
.heart{
    position: relative;
    width: 68rpx;
}
.share{
    display: inline-block;
    width: 40rpx;
    height: 40rpx;

}
.assist{
    position: absolute;
    top:0;
    right: 0;
    font-size:24rpx;
    line-height:24rpx;
    color:#bbbbbb;

}
.date{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.month{
font-size:24rpx;
}
.year{
font-size: 20rpx;
}
.day{
    display: flex;
    flex-direction: row;
    align-items:baseline;

}
.no{
    font-size:32rpx;
}

.day-item{
    font-size:60rpx;
    font-weight: bold;

}
.left{
    display: flex;
    justify-content: flex-start;
}
.line{
    width:4rpx;
    height:46rpx;
    line-height: 88rpx;
    background-color: #000;
    margin:14rpx 12rpx 0;
}
.right{
    display: flex;
    flex-direction: row;
    padding-right:36rpx;


}
.forward{
    margin-left:20rpx;

}
.content::after {
    border: none !important;
    padding: 0 !important;
}
.content{
    padding: 0 !important;
    border:none !important;
    padding-top:18rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.forward button{
    width: 45rpx;
    height: 45rpx;
    background-color: #fff;
  
}
.heart-img{

    width: 26rpx;
    height:26rpx;
}