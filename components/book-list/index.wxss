/* components/book-list/index.wxss */
.book-list{
    width: 750rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    background-color:#f5f5f5;

}

.top-image{
    width: 100%;
    margin: 60rpx auto;
    text-align: center
}
.choose{
    width:106rpx;
    height:34rpx;

}
.contain{
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    flex-wrap: wrap;
    align-items: center;
    width: 100%;
}

.all{
    width:34%;
    height:360rpx;
    position: relative;
    margin-bottom: 40rpx;
    
}
.book-decoration{
    width: 100%;
    height:100%;
}
.book-image{
    width: 100%;
    height:100%;
}

.face{
    position: absolute;
    bottom: 0;
    left: 0;
    box-sizing:border-box;
    padding-left:10rpx;
    padding-bottom: 6rpx;
    width: 100%;
    height:34%;
    background-color: #fff;
}
.name{
    display: block;
    font-size: 28rpx;
    margin-top:10rpx;
    text-overflow:ellipsis;
    white-space:nowrap;
    overflow:hidden;
    
}
.writer{
    display: block;
    font-size:20rpx;
    color:#999999;
    margin-bottom:10rpx;
    text-overflow:ellipsis;
    white-space:nowrap;
    overflow:hidden;
    
}
.like{
    font-size: 24rpx;
    display: block;
    color:#666666;
    text-align: right;

}